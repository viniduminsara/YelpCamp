<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/stylesheets/login.css">

<div class="row d-flex justify-content-center align-items-center">
    <div class="col-lg-4 col-md-6 col-sm-12 col-12">
        <div class="card p-3">          
            <h1 class="text-center my-4">Login</h1>
            <form action="/login" method="post" class="needs-validation" novalidate>
                <div class="mb-2">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control shadow-none" id="username" placeholder="johndoe" name="username" required>
                    <div class="invalid-feedback">Please enter the username.</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control shadow-none" id="password" placeholder="********" name="password" required>
                    <div class="invalid-feedback">Please enter the password.</div>
                </div>
                <button class="w-100">Login</button>
            </form>
            <a href="/signup" class="signup-link mt-3">Not having an account?</a>
        </div>
    </div>
    <div class="col-lg-8 col-md-6 col-sm-12 col-12 d-flex justify-content-center align-items-center">
        <img src="/images/logo.png" alt="logo" style="width: 400px;">
    </div>
</div>

