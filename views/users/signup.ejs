<% layout('layouts/boilerplate') %>

<link rel="stylesheet" href="/stylesheets/signup.css">

<div class="row d-flex justify-content-center align-items-center">
    <div class="col-lg-8 col-md-6 col-sm-12 col-12 d-flex justify-content-center align-items-center">
        <img src="/images/logo.png" alt="logo" style="width: 550px;">
    </div>
    <div class="col-lg-4 col-md-6 col-sm-12 col-12">
        <div class="card p-3">
            <h1 class="text-center mt-2">Sign up</h1>
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-2">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control shadow-none" id="username" placeholder="johndoe" name="username" required>
                    <div class="invalid-feedback">Please enter the username.</div>
                </div>
                <div class="mb-2">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control shadow-none" id="email" placeholder="johndoe@gmail.com" name="email" required>
                    <div class="invalid-feedback">Please enter the email.</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control shadow-none" id="password" placeholder="********" name="password" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please enter the password.</div>
                </div>
                <button class="w-100">Signup</button>
            </form>
            <a href="/login" class="login-link mt-3">Already have an account?</a>
        </div>
    </div>
</div>

