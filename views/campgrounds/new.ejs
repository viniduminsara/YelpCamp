<% layout('layouts/boilerplate') %>

<h1 class="text-center mb-4 mt-2">New Campground</h1>

<form action="/campgrounds" method="post">
    <div class="col-6 offset-3">
        <div class="mb-2">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" placeholder="Enter Title of the campground" name="campground[title]">
        </div>
        <div class="mb-2">
            <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" id="location" placeholder="Enter Location of the campground" name="campground[location]">
        </div>
        <div class="input-group mb-2">
            <label for="price" class="form-label">Campground Price</label>
            <div class="input-group">
                <span class="input-group-text" id="sign">$</span>
                <input type="number" class="form-control" id="price" placeholder="0.0" name="campground[price]" aria-label="price" aria-describedby="sign">
            </div>
        </div>
        <div class="mb-2">
            <label for="image" class="form-label">Image URL</label>
            <input type="text" class="form-control" id="image" placeholder="Enter Image url of the campground" name="campground[image]">    
        </div>
        <div class="mb-2">
            <label for="desc" class="form-label">Description</label>
            <textarea type="text" class="form-control" id="desc" placeholder="Enter Description of the campground" name="campground[description]"></textarea>
        </div>
        <button class="btn btn-success">Save Campground</button>
    </div>
</form>
