<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= campground.image %>" class="card-img-top" alt="<%= campground.tile %>" height="400px">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text"><%= campground.description %>.</p>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item text-muted">Location : <%= campground.location %></li>
              <li class="list-group-item">$ <%= campground.price %>/day</li>
            </ul>
            <div class="card-body">
                <a class="btn btn-primary" href="/campgrounds/<%= campground.id %>/edit">Edit Details</a>
                <form action="/campgrounds/<%= campground.id %>?_method=DELETE" method="post" class="d-inline">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
        <h2>Leave a Review</h2>
        <form action="" class="mb-3">
            <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <input type="range" name="review[rating]" id="rating" min="0" max="5" class="form-range">
            </div>
            <div class="mb-3">
                <label class="form-label" for="body">Review</label>
                <textarea name="review[body]" id="body" class="form-control" cols="30" rows="4"></textarea>
            </div>
            <button class="btn btn-success">Submit</button>
        </form>
    </div>
</div>
